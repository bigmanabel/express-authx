{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}